<% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |m| %>
        <li><%= m%></li>
    <% end %>
<% end %>

<%= form_for @post do |f|%>
    <%= f.text_field :title, placeholder: "Название"%><br>
    <%= f.text_area :description, placeholder: "Описание" %><br>
    <%= f.number_field :expense, placeholder: "Расход"%><br>
    <%= f.submit "Создать запись"%>
<% end%>